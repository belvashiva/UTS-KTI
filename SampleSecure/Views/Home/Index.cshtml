@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="display-4">Selamat datang, @ViewBag.username!</h2>
        <p class="lead">Ini adalah halaman utama aplikasi Anda.</p>

        @if (!string.IsNullOrEmpty(ViewBag.username)) // Periksa apakah pengguna sudah login
        {
            <div class="mt-4">
                <a asp-controller="Student" asp-action="Index" class="btn btn-primary btn-lg mb-3">Lihat Data Barang</a> <!-- Mengarahkan ke Student/Index -->
            </div>

            <form asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
            </form>
        }
        else
        {
            <div class="mt-4">
                <a asp-action="Login" class="btn btn-success btn-lg">Login</a> <!-- Tautan ke halaman login jika belum login -->
            </div>
        }
    </div>
</div>
