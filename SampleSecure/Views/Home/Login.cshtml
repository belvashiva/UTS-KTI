@model SampleSecure.Models.LoginModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Login</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login" method="post" class="bg-light p-4 rounded shadow-sm">
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label font-weight-bold">Username</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label font-weight-bold">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Login" class="btn btn-primary w-100" />
                </div>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-warning text-center mt-3">
                    @ViewBag.Message
                </div>
            }

            <p class="text-center mt-4">
                Belum punya akun? <a asp-action="Register" class="text-primary">Daftar di sini</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
